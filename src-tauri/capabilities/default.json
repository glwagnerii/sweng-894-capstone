{
  "$schema":     "../gen/schemas/desktop-schema.json",
  "identifier":  "default",
  "description": "enables the default permissions",
  "windows":    ["main"],
  "permissions": [
    "log:default",
    "core:default",
    "os:default",
    "store:default",
    "sql:default",
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://fakestoreapi.com" }]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$RESOURCE/**/*" }
      ]
    },
    "opener:default",
    "notification:default",
    "fs:default",
    "dialog:default"
  ]
}
